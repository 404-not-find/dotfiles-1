# vi: noet ts=8 sw=8

[user]
	email = paj-github@johnsy.com
	name = Pete Johns
[alias]
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	cr = log --abbrev-commit -p
	df = diff
	lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all --decorate
	mt = mergetool
	pr = smart-pull
	sd = svn dcommit
	sfr = !git svn fetch && git svn rebase
	st = status
	stp = status --porcelain
	today = diff --stat '@{yesterday}'
	wc = whatchanged --abbrev-commit
[color]
	ui = auto
[core]
	autocrlf = input
	excludesfile = /opt/boxen/config/git/gitignore
	pager = less -+$LESS -FRX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[web]
	browser = google-chrome
[browser "google-chrome"]
	cmd = /usr/bin/google-chrome
[merge]
	tool=vimdiff
[push]
	default = current
[github]
	user = johnsyweb

[credential]
	helper = /opt/boxen/bin/boxen-git-credential

[hub]
	protocol = https

[gh]
	protocol = https
