[user]
    email = paj-github@johnsy.com
    name = Pete Johns
[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    lg = log --abbrev-commit -p
    st = status
    wc = whatchanged --abbrev-commit
[color]
    ui = auto
[core]
    excludesfile = ~/dotfiles/git-global-ignore
    pager = less -+$LESS -FRX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[sendemail]
	aliasesfile = ~/.muttrc-alias
    aliasfiletype = mutt
[web]
    browser = google-chrome
[browser "google-chrome"]
    cmd = /usr/bin/google-chrome
